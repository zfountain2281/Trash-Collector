@using Microsoft.AspNet.Identity
@model TrashCollector.Models.IndexUserViewModel

@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_DashboardNav")

<h3>Manage Users</h3>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-primary" })
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>User ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @{ 
        int count = 0;
    }
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@Model.UserRoles[count].Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { userId = user.Id }, new { @class = "btn btn-info btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { userId = user.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
        count++;
    }
</table>
