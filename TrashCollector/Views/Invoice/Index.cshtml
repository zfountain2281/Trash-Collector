@model IEnumerable<TrashCollector.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_DashboardNav")

<h3>Invoices</h3>

<p>
    @Html.ActionLink("Create Invoices for Completed Pickups", "Generate", "Invoice", routeValues: null, htmlAttributes: new { title = "Add Invoice", @class = "btn btn-success" })
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            User Id
        </th>
        <th>
            Amount Due
        </th>
        <th>
            Due Date
        </th>
        <th>
            Paid
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @String.Format("{0:C2}",item.AmountDue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPaid)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InvoiceId }) |
            @Html.ActionLink("Details", "Details", new { id=item.InvoiceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InvoiceId })
        </td>
    </tr>
}

</table>
